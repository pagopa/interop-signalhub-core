{
  "name": "signalhub-push-signal",
  "version": "1.0.0",
  "description": "PagoPA Push Signal Service",
  "type": "module",
  "main": "dist",
  "scripts": {
    "start": "node --watch --loader ts-node/esm -r 'dotenv-flow/config'  ./src/index.ts",
    "generate-spec": "mkdir -p interface && node --loader ts-node/esm -r 'dotenv-flow/config' ./src/openapi-script/generate-interface.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:autofix": "eslint . --ext .ts,.tsx --fix",
    "build": "tsc",
    "test": "vitest",
    "format:check": "prettier --check src test",
    "format:write": "prettier --write src test",
    "check": "tsc --project tsconfig.check.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ts-rest/core": "^3.45.2",
    "@ts-rest/express": "^3.45.2",
    "@ts-rest/open-api": "^3.45.2",
    "axios": "^1.6.8",
    "connection-string": "^4.4.0",
    "dotenv-flow": "^4.1.0",
    "express": "^4.19.2",
    "fast-json-stringify": "^5.16.0",
    "js-yaml": "^4.1.0",
    "pg-promise": "^11.6.0",
    "signalhub-commons": "workspace:*",
    "signalhub-commons-test": "workspace:*",
    "signalhub-interop-client": "workspace:*",
    "swagger-ui-express": "^5.0.0",
    "ts-pattern": "^5.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/swagger-ui-express": "^4.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
