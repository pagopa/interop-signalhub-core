{
  "name": "interop-signalhub-core",
  "private": true,
  "scripts": {
    "start": "turbo start",
    "start:push-signals": "turbo start --filter push-signal",
    "start:pull-signals": "turbo start --filter pull-signal",
    "start:persister": "turbo start --filter persister-service",
    "start:updater": "turbo start --filter signalhub-updater-service",
    "start:cleanup": "turbo start --filter batch-cleanup",
    "test": "turbo test",
    "test:push": "turbo test --filter push-signal",
    "test:pull": "turbo test --filter pull-signal",
    "test:persister": "turbo test --filter persister-service",
    "test:updater": "turbo test --filter  signalhub-updater-service",
    "test:cleanup": "turbo test --filter batch-cleanup",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:autofix": "turbo lint:autofix",
    "format:check": "turbo format:check",
    "format:write": "turbo format:write",
    "check": "turbo check",
    "dev": "turbo dev",
    "prune-dist": "find . -name 'dist' -type d -exec rm -rf {} +",
    "prune-modules": "find . -name 'node_modules' -type d -exec rm -rf {} +",
    "ci": "pnpm format:check && pnpm lint && pnpm check && pnpm build"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "turbo": "latest",
    "eslint": "8.57.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=20"
  }
}
