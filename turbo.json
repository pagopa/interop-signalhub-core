{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },

    "test": {
      "dependsOn": ["build"]
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    },
    "lint:autofix": {
      "dependsOn": ["^build"],
      "outputs": ["dist"]
    }
  }
}
